    <!-- Contact -->
    <section id="contact">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <h3 class="pb-4">Get in touch</h4>
          </div>
        </div>
        <div class="row">
          <div class="col-12 col-md-8 offset-md-2">
            <form class="pt-4" data-netlify="true" netlify-honeypot="bot-field" method="POST" name="contactSubmission" action="/#contact" id="contactForm" novalidate>
              <div hidden aria-hidden="true">
                <label>
                  Don’t fill this out if you're human: 
                  <input name="bot-field" />
                </label>
              </div>
              <div class="form-row">
                <div class="form-group col-md-4 mb-3">
                  <label for="theName">Name</label>
                  <input type="text" class="form-control" name="theName" placeholder="Your Name*" required>
                  <div class="invalid-feedback">
                    Please provide your name.
                  </div>
                </div>
                <div class="form-group col-md-4 mb-3">
                  <label for="theEmail">Email</label>
                  <input type="email" class="form-control" name="theEmail" placeholder="your@email.com*" required>
                  <div class="invalid-feedback">
                    Please provide your email address.
                  </div>
                </div>
                <div class="form-group col-md-4 mb-3">
                  <label for="thePhone">Phone</label>
                  <input type="tel" class="form-control" name="thePhone" placeholder="Your phone">
                  <div class="invalid-feedback">
                    Please provide a valid phone number.
                  </div>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-12 mb-3">
                  <label for="theProject">Tell us about your project</label>
                  <textarea class="form-control" name="theProject" rows="3" placeholder="Your Message*" required></textarea>
                </div>
              </div>
              <div class="col-12">
                <h5>So many questions...</h5>
              </div>
              <div class="form-row">
                <div class="form-group col-md-6 mb-3">
                  <label for="theWorkType">What type of work are you looking for?</label>
                  <select class="form-control custom-select" name="theWorkType">
                    <option value=""></option>
                    <option value="branding">Branding &amp; Identity</option>
                    <option value="hosting">Domain/Hosting/Email Services</option>
                    <option value="support">Training/Support</option>
                    <option value="webdesign">Website Design</option>
                    <option value="maintennce">Website Maintenance/Migration</option>
                  </select>
                </div>
                <div class="form-group col-md-6 mb-3">
                  <label for="theTimeLine">What is the timeline for your project?</label>
                  <input type="text" class="form-control" name="theTimeLine">
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-4 mb-3">
                  <label for="theWebSite">Website?</label>
                  <input type="text" class="form-control" name="theWebSite" placeholder="">
                </div>
                <div class="form-group col-md-4 mb-3">
                  <label for="theAssets">Assets</label>
                  <select class="form-control custom-select" name="theAssets">
                    <option value=""></option>
              			<option value="need-help">I need help with content</option>
              			<option value="content-soon">Content is being collected</option>
              			<option value="content-ready">Content is ready to go</option>
                  </select>
                </div>
                <div class="form-group col-md-4 mb-3">
                  <label for="theBudget">Budget</label>
                  <select class="form-control custom-select" name="theBudget">
                    <option value=""></option>
              			<option value="Under $1000">Under $1000</option>
              			<option value="$1000 - $3000">$1000 - $3000</option>
              			<option value="$3000 - $5000">$3000 - $5000</option>
              			<option value="$5000 - $8000">$5000 - $8000</option>
              			<option value="Over $8000">Over $8000</option>
                  </select>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-12 mb-3">
                  <label for="theWhere">Where'd you hear about us?</label>
                  <input type="text" class="form-control" name="theWhere" placeholder="">
                </div>
              </div>
              <div class="clearfix"></div>
              <div class="col-lg-12 text-center">
                <div id="success"></div>
                <div class="result-message"></div>
                <button id="TheSendButton" class="btn btn-outline mt-3" type="submit">Send Message</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

